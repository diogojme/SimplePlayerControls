<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/player_small_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4b009b" />

    <ImageView
        android:id="@+id/player_small_view_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/mcguime"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/player_small_view_controller_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/player_small_view_previous"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:src="@drawable/ic_skip_previous_white_48dp" />

        <ImageButton
            android:id="@+id/player_small_view_next"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_skip_next_white_48dp" />

        <ImageButton
            android:id="@+id/player_small_view_toggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_play_circle_filled_white_48dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/player_small_view_cover"
        android:layout_toRightOf="@id/player_small_view_cover"
        android:layout_toLeftOf="@+id/player_small_view_controller_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/player_small_view_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#585858"
            android:text="Song" />

        <TextView
            android:id="@+id/player_small_view_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a6a6a6"
            android:text="Artist" />

        <TextView
            android:id="@+id/player_small_view_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="album" />
    </LinearLayout>


</RelativeLayout>
